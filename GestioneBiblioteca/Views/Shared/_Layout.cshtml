<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestione Biblioteca</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .donazioni-badge {
            background-color: #28a745;
            color: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Biblioteca</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Libri/Index">Libri</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Utenti/Index">Utenti</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Prestiti/Index">Prestiti</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Donazioni/Create">Donazioni</a></li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <!-- Totale Donazioni -->
                        <li class="nav-item d-flex align-items-center me-3">
                            <span class="donazioni-badge">
                                <i class="bi bi-heart-fill"></i>
                                Raccolto: €<span id="totaleDonazioni">0.00</span>
                            </span>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Privacy">Privacy</a></li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Upload" asp-action="UploadFile">
                                <i class="bi bi-cloud-upload"></i> Upload
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - Gestione Biblioteca
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    <!-- Script per aggiornare il totale donazioni -->
    <script>
        // Funzione per caricare il totale donazioni
        function caricaTotaleDonazioni() {
            fetch('/Donazioni/GetTotaleDonazioni')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('totaleDonazioni').textContent = data.totale.toFixed(2);
                })
                .catch(error => {
                    console.error('Errore nel caricamento del totale donazioni:', error);
                });
        }

        // Carica il totale quando la pagina è pronta
        document.addEventListener('DOMContentLoaded', function () {
            caricaTotaleDonazioni();
        });

        // Aggiorna ogni 30 secondi (opzionale)
        setInterval(caricaTotaleDonazioni, 30000);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>