@{
    ViewData["Title"] = "Grazie!";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </div>

                    <h1 class="card-title text-success mb-4">Grazie per la tua donazione!</h1>

                    <p class="card-text lead mb-4">
                        Il pagamento è stato completato con successo.
                    </p>

                    <p class="text-muted mb-4">
                        Riceverai una conferma via email a breve.
                    </p>

                    @if (ViewBag.TotaleDonazioni != null)
                    {   
                        <div class="alert alert-info">
                            <strong>Totale raccolto fino ad ora:</strong> €@ViewBag.TotaleDonazioni
                        </div>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Create", "Donazioni")" class="btn btn-primary me-2">
                            Fai un'altra donazione
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            Torna alla home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>