@model GestioneBiblioteca.Models.Donazione

@{
    ViewData["Title"] = "Fai una donazione";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Fai una donazione</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label">Nome completo</label>
                            <input asp-for="Nome" class="form-control" placeholder="Mario Rossi" required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="mario.rossi@email.com" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Importo" class="form-label">Importo (€)</label>
                            <input asp-for="Importo" class="form-control" type="number" step="0.01" min="1" placeholder="10.00" required />
                            <span asp-validation-for="Importo" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            Procedi al pagamento
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}