@model GestioneBiblioteca.Models.Donazione

@{
    ViewData["Title"] = "Completa il pagamento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Completa il pagamento</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Importo da pagare:</strong> €@Model.Importo
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Dati della carta</label>
                        <div id="card-element" class="form-control" style="height: 40px; padding-top: 10px;"></div>
                        <div id="card-errors" class="text-danger mt-2"></div>
                    </div>

                    <button id="submit" class="btn btn-success w-100">
                        <span id="button-text">Paga €@Model.Importo</span>
                        <span id="spinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                    </button>

                    <div class="text-center mt-3">
                        <small class="text-muted">Pagamento sicuro con Stripe</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
    var stripe = Stripe("@ViewBag.PublishableKey");
    var clientSecret = "@ViewBag.ClientSecret";
    var elements = stripe.elements();
    var cardElement = elements.create('card', {
        style: {
            base: {
                fontSize: '16px',
                color: '#32325d',
            }
        }
    });
    cardElement.mount('#card-element');

    // Gestione errori carta
    cardElement.on('change', function (event) {
        var displayError = document.getElementById('card-errors');
        if (event.error) {
            displayError.textContent = event.error.message;
        } else {
            displayError.textContent = '';
        }
    });

    // Gestione submit
    document.getElementById('submit').addEventListener('click', async function () {
        var submitButton = document.getElementById('submit');
        var buttonText = document.getElementById('button-text');
        var spinner = document.getElementById('spinner');

        // Disabilita il pulsante
        submitButton.disabled = true;
        buttonText.classList.add('d-none');
        spinner.classList.remove('d-none');

        try {
            const { paymentIntent, error } = await stripe.confirmCardPayment(clientSecret, {
                payment_method: {
                    card: cardElement
                }
            });

            if (error) {
                // Mostra errore
                document.getElementById('card-errors').textContent = error.message;
                submitButton.disabled = false;
                buttonText.classList.remove('d-none');
                spinner.classList.add('d-none');
            } else if (paymentIntent.status === 'succeeded') {
                // Conferma pagamento al server
                const response = await fetch('/Donazioni/ConfermaPagamento', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        paymentIntentId: paymentIntent.id
                    })
                });

                if (response.ok) {
                    window.location.href = '/Donazioni/Success';
                } else {
                    throw new Error('Errore nella conferma del pagamento');
                }
            }
        } catch (err) {
            document.getElementById('card-errors').textContent = 'Si è verificato un errore. Riprova.';
            submitButton.disabled = false;
            buttonText.classList.remove('d-none');
            spinner.classList.add('d-none');
        }
    });
</script>